<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SettingCommandHintActivity">

    <Button
        android:id="@+id/buttonCreatePkgCommands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReturnerMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickButtonReturnedMain"
        android:text="@string/returner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="581dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreatePkgCommands">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/itemsSetHint"
                android:layout_width="match_parent"
                android:layout_height="606dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="359dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:text="@string/InfoSetHintsComm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/buttonCreatePkgCommands"
        app:layout_constraintStart_toEndOf="@+id/buttonReturnerMain"
        app:layout_constraintTop_toBottomOf="@+id/buttonReturnerMain" />

</androidx.constraintlayout.widget.ConstraintLayout>